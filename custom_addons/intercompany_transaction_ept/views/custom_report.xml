<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define the blank layout template -->
    <template id="report_blank_layout">
        <t t-name="intercompany_transaction_ept.report_blank_layout">
            <div class="page" style="font-family: 'Open Sans', Arial, sans-serif; margin: 0; padding: 20px;">
                <!-- Custom styling for tables and other elements -->
                <style>
                    .table {
                        width: 100%;
                        border-collapse: collapse;
                        margin-bottom: 20px;
                    }
                    .table tr,td {
                        font-size: 10px;
                    }
                    .table th, .table td {
                        border: 1px solid #000;
                        padding: 6px;  /* Reduced padding for table cells */
                        text-align: left;
                    }
                    .table th {
                        background-color: #f2f2f2;
                        font-size: 15px;
                    }
                    .table-striped tbody tr:nth-of-type(odd) {
                        background-color: #f9f9f9;
                    }
                    .table-bordered {
                        border: 1px solid #000;
                    }
                    .text-end {
                        text-align: right;
                    }
                    .page {
                        page-break-after: always;
                    }
                </style>
                <t t-raw="0"/>
            </div>
        </t>
    </template>
</odoo>
