<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form_cod" model="ir.ui.view">
        <field name="name">payment.provider.form.cod</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="priority">32</field>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="custom_mode" invisible="1"/>
            </field>
            <field name="payment_method_ids" position="attributes">
                <attribute name="invisible">state == 'disabled' or code != 'custom'</attribute>
            </field>
            <field name="pending_msg" position="attributes">
                <attribute name="string">COD Instructions</attribute>
                <attribute name="invisible">custom_mode != 'cod'</attribute>
            </field>
            <group name="payment_followup" position="attributes">
                <attribute name="invisible">code == 'custom'</attribute>
            </group>
        </field>
    </record>
</odoo>