<!--Nikasa Pratiwedan कर्मचारीको तलब हिसाब गर्ने-->
<odoo>
    <report
        id="employee_sapati_katti"
        model="hr.payslip"
        string="Employee Sapati Katti"
        report_type="qweb-pdf"
        name="hr_payroll_community.employee_sapati_katti"
        file="hr_payroll_community.employee_sapati_katti"
    />
    <template id="employee_sapati_katti_id">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <style>
                    .header{
                    font-size: 28px;
                    font-weight: 600;
                    }
                    #subject{
                    text-align: center; / Center align the content /
                    margin-top:0%;
                    }
                    h1 {
                    text-align: center;
                    font-weight: 600 !important;
                    font-size: 18px !important;
                    }
                    h3 {
                    text-align: center; / Center align the content /
                    margin-top:0%;
                    }
                    h4{
                    text-align: center; / Center align the content /
                    margin-top:0%;
                    }
                    #item5{
                    display:flex;
                    flex: 33%;
                    margin-left:0%;
                    }
                    #item6{
                    display:flex;
                    flex: 33%;
                    margin-left:30%;
                    }
                    #item7{
                    display:flex;
                    flex: 33%;
                    margin-left:30%;
                    }
                    #sub1{
                    display:flex;
                    flex: 25%;
                    }
                    #sub2{
                    display:flex;
                    flex: 33%;
                    margin-left:70%;
                    }
                    @font-face {
                    font-family: 'Kalimati';
                    src: url('/bank_form/static/src/font/kalimati_regular/Kalimati.ttf')
                    }
                    body{
                    font-family: 'Kalimati', sans-serif;
                    }
                    #dataTable {
                    border-collapse: collapse;
                    width: 100%;
                    margin-bottom: 0px;
                    font-size: 20px;
                    }

                    #dataTable th, #dataTable td {
                    border: 1px solid #ddd;
                    padding: 8px;
                    text-align: center; /* Centers text horizontally */
                    vertical-align: middle; /* Centers text vertically */
                    }

                    #dataTable th {
                    background-color: whitesmoke;
                    color: black;
                    }
                </style>
                <br></br>
                <h3>कर्मचारी संचय कोष</h3>
                <h4>सापटी कट्टी फाँटवारी</h4>
                <br></br>
                <div
                    style="text-align: left; border: 1px solid black; padding: 10px; border-radius: 5px;">
                    <span class="d-flex justify-content-start">कार्यालयको नाम: <t t-out="env.user.company_id.name" /></span>
                    <span class="d-flex justify-content-start">कार्यालयको ठेगाना: <t t-out="env.user.company_id.street" /> </span>
                    <span class="d-flex justify-content-start">कार्यालयको कोड नम्बर: <t t-out="env.user.company_id.pf_code" /></span>
                    <span class="d-flex justify-content-start"> रकम दाखिला गरेको बैंकको नाम:  <t t-esc="docs[0].batches_id.bank_name.bank_name_np"/> | ठेगाना: <t t-esc="docs[0].batches_id.bank_branch.branch_address_np"/> </span>
                    <span class="d-flex justify-content-start">सापटी कट्टी महिना: <t t-out="docs[0].batches_id.months.name_np" />
                    </span>
                    <span class="d-flex justify-content-start">रकम दाखिला गरेको मिति:  <t t-out="docs[0].batches_id.batch_date_bs" /></span>
                    <span class="d-flex justify-content-start">जम्मा दाखिला रकम रु: <t t-foreach="docs"
                            t-as="o">
                           <t t-out="total_amount_loan" />
                        </t>
                    </span>
                    <span class="d-flex justify-content-start">अक्षरेपी रु.: <t t-foreach="docs"
                            t-as="o">
                            
                        </t>
                    </span>
                </div>
                <br></br>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="active">
                            <th>सि.नं.</th>
                            <th>व्यक्तिगत नम्बर</th>
                            <th>दर्जा</th>
                            <th>कोषको परिचय पत्र नम्बर</th>
                            <th>नाम थर </th>
                            <th>सापटी कट्टी रकम रू. </th>
                            <th>कैफियत </th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="sn" t-value="1" />
                        <t t-set="total_amount_loan" t-value="0" />
                        <t t-foreach="docs" t-as="o">
                        <t t-set="calculate_salary_batches" t-value="o.get_report_value(o.batches_id.id,o.employee_id.id)"/>
                        <t t-set="total_amount_loan" t-value="total_amount_loan + calculate_salary_batches.loan" />
                            <tr>
                                <td>
                                    <t t-esc="sn" />
                                    <t t-set="sn" t-value="sn+1" />
                                </td>
                                <td>
                                    <t t-esc="o.employee_id.personal_identification_number" />
                                </td>
                                <td>
                                    <t t-esc="o.employee_id.employee_post.name_np" />
                                </td>
                                <td>
                                    <t t-esc="o.employee_id.pf_number" />
                                </td>
                                <td>
                                    <t t-esc="o.employee_id.name" />
                                </td>
                                <td>
                                     <t t-esc="calculate_salary_batches.loan  " />
                                </td>
                                <td>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                    <tr>
                        <td colspan="5">यस पानाको जम्मा </td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td colspan="5">कुल जम्मा</td>
                        <td><t t-out="total_amount_loan" /></td>
                        <td></td>
                    </tr>
                </table>
                <br></br>
                <br></br>
                <div class="d-flex flex-row mb-3">
                    <div class="p-2" id="item5">
                        <p class="d-flex justify-content-center">________ </p>
                        <p class="d-flex justify-content-center"> तयार गर्ने
                        </p>
                    </div>
                    <div class="p-2" id="item6">
                        <p class="d-flex justify-content-center">________
                        </p>
                        <p class="d-flex justify-content-center">स्विकृत गर्ने
                        </p>
                    </div>
                    <div class="p-2" id="item7">
                        <p class="d-flex justify-content-center">__________
                        </p>
                        <p class="d-flex justify-content-center">कार्यालय प्रमुख
                        </p>
                    </div>
                </div>
                <div
                    style="text-align: left; border: 1px solid black; padding: 10px; border-radius: 5px;">
                    <p>नोट: <br></br> १. फाँटवारी पठाउदा (फाइल) साईजमा पठाउनु पर्छ । <br></br> २.
                        फाँटवारीमा परिचय पत्र नम्बर अनिवार्य रुपमा समाबेस गर्नु पर्छ । <br></br> ३.
                        सापटी कट्टीको छुट्टै फाँटवारी पठाउनु पर्छ । <br></br> ४. सरुवा, बढुवा तथा
                        नियुक्त्ति भए कैफियत उल्लेख गर्नुपर्छ । <br></br> ५. कर्मचारीहरुको व्यक्तिगत
                        नम्बर भएमा सो नम्बर समेत उल्लेख गर्नुपर्छ । </p>
                </div>
            </t>
        </t>
    </template>
    <record id="action_employee_sapati_katti" model="ir.actions.report">
        <field name="name">Employee Sapati Katti</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_payroll_community.employee_sapati_katti_id</field>
        <field name="binding_model_id" ref="model_hr_payslip" />
        <field name="binding_type">report</field>
    </record>

</odoo>