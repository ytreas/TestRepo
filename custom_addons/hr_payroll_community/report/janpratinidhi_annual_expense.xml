<!-- कर्मचारीको तलब हिसाब गर्ने education annual or quartly nikasa report-->
<odoo>
    <report
        id="janpratinidhi_annual_expense"
        model="hr.payslip"
        string="Janpratinidhi Annual Expense"
        report_type="qweb-pdf"
        name="hr_payroll_community.janpratinidhi_annual_expense"
        file="hr_payroll_community.janpratinidhi_annual_expense"
    />
    <template id="janpratinidhi_annual_expense_id">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <style>
                    .header{
                    font-size: 28px;
                    font-weight: 600;
                    }
                    .address{
                    font-size: 20px;
                    font-weight: 600;
                    }
                    #subject{
                    text-align: center; / Center align the content /
                    margin-top:0%;
                    }
                    h1 {
                    text-align: center;
                    font-weight: 600 !important;
                    font-size: 18px !important;
                    }
                    h3 {
                    text-align: center; / Center align the content /
                    margin-top:0%;
                    }
                    h4{
                    text-align: center; / Center align the content /
                    margin-top:0%;
                    }
                    h5{
                    text-align: center; / Center align the content /
                    margin-top:0%;
                    }
                    #item5{
                    display:flex;
                    flex: 33%;
                    margin-left:0%;
                    }
                    #item6{
                    display:flex;
                    flex: 33%;
                    margin-left:30%;
                    }
                    #item7{
                    display:flex;
                    flex: 33%;
                    margin-left:30%;
                    }
                    #month{
                    display:flex;
                    flex: 33%;
                    margin-right:0%;
                    }
                    #sub1{
                    display:flex;
                    flex: 25%;
                    }
                    #sub2{
                    display:flex;
                    flex: 33%;
                    margin-left:70%;
                    }
                    @font-face {
                    font-family: 'Kalimati';
                    src: url('/bank_form/static/src/font/kalimati_regular/Kalimati.ttf')
                    }
                    body{
                    font-family: 'Kalimati', sans-serif;
                    }
                    #dataTable {
                    border-collapse: collapse;
                    width: 100%;
                    margin-bottom: 0px;
                    font-size: 20px;
                    }

                    #dataTable th, #dataTable td {
                    border: 1px solid #ddd;
                    padding: 8px;
                    text-align: center; /* Centers text horizontally */
                    vertical-align: middle; /* Centers text vertically */
                    }

                    #dataTable th {
                    background-color: whitesmoke;
                    color: black;
                    }
                </style>
                <div>
                    <!-- Left-aligned logo -->
                    <div>
                        <!-- <img style="float: right; height: 90px; width: 80px;"
                        t-if="display_company.logo" t-att-src="image_data_uri(display_company.logo)"
                        alt="Logo"/> -->
                        <!-- <img style="float: left; height: 80px; width: 90px;"
                        src="/bank_form/static/src/img/logo.png" alt="alt-Logo"/> -->
                        <!-- Centered content -->
                        <div style="overflow: hidden; text-align: center;">
                            <strong>
                                <span class="header"
                                    t-field="env.user.company_id" />
                            </strong>
                            <br />
                            <strong>
                                <span class="header">
                                    नगर कार्यपालिकाको कार्यालय
                                </span>
                            </strong>
                            <br />
                            <strong>
                                <span class="address" t-field="env.user.company_id.street_np" />
                            </strong>
                            <br />
                            <br></br>
                            <br></br>
                        </div>
                    </div>
                </div>

                <br>
                    <h4>जनप्रतिनिधीको निकासा प्रदिवेदन  </h4>
                </br>
                <div style="overflow: hidden">
                    <strong>
                        <span class="p-2" id="item5">
                            (Year)
                        </span>
                    </strong>
                </div>


                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="active">
                            <th>क्र.सं.</th>
                            <th>मिति </th>
                            <th>आ.ब.</th>
                            <th>निकासाको प्रकार </th>
                            <th>निकासाको नम्बर</th>
                            <th>प.स. </th>
                            <th>च.नं.</th>
                            <th>निकासा</th>
                            <th>निकासा गर्ने</th>
                            <th>निकासा मिति</th>
                            <th>बैंकको नाम</th>
                            <th>बैंकको शाखा</th>
                            <th>चेक नम्बर</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="sn" t-value="1" />
                        <t t-foreach="docs" t-as="o">
                            <tr>
                                <td>
                                    <t t-esc="sn"/>
                                            <t t-set="sn" t-value="sn+1"/>
                                </td>
                                <td>
                                    <!-- <t t-esc="o.irregularity_clause_no"/> -->
                                </td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <div class="d-flex flex-row mb-3">
                    <div class="p-2" id="item5">
                        <p class="d-flex justify-content-center">_______
                        </p>
                        <p class="d-flex justify-content-center">तयार गर्ने
                        </p>
                    </div>
                    <div class="p-2" id="item6">
                        <p class="d-flex justify-content-center">_______
                        </p>
                        <p class="d-flex justify-content-center">रुजु गर्ने
                        </p>
                    </div>
                    <div class="p-2" id="item7">
                        <p class="d-flex justify-content-center">_______
                        </p>
                        <p class="d-flex justify-content-center">स्वीकृत गर्ने
                        </p>
                    </div>
                </div>
            </t>
        </t>
    </template>
    <record id="action_janpratinidhi_annual_expense" model="ir.actions.report">
        <field name="name">Janpratinidhi Annual Expense</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_payroll_community.janpratinidhi_annual_expense_id</field>
        <field name="binding_model_id" ref="model_hr_payslip" />
        <field name="binding_type">report</field>
    </record>

</odoo>