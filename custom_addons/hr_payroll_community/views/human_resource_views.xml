        <!-- Representative Details View -->
        <record id="view_representative_details_tree" model="ir.ui.view">
            <field name="name">representative.details.tree</field>
            <field name="model">representative.details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code" />
                    <field name="current" />
                    <field name="designation" />
                    <field name="first_name_np" />
                    <field name="representative_position" />
                    <field name="current_position_start_date_np" />
                    <field name="current_position_end_date_np" />
                    <field name="email" />
                    <field name="mobile_number" />
                    <field name="status" />
                </tree>
            </field>
        </record>
        <!-- Form View -->
        <record id="view_representative_details_form" model="ir.ui.view">
            <field name="name">representative.details.form</field>
            <field name="model">representative.details</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Basic Information">
                            <group>
                                <field name="code" />
                                <field name="designation" />
                                <field name="representative_position" />
                            </group>
                            <group>
                                <field name="status" />
                                <field name="current" />
                            </group>
                        </group>
                        <group string="Personal Information">
                            <group>
                                <field name="first_name_en" />
                                <field name="first_name_np" />
                                <field name="middle_name_en" />
                                <field name="middle_name_np" />
                                <field name="surname_en" />
                                <field name="surname_np" />
                                <field name="fathers_name_en" />
                                <field name="fathers_name_np" />
                                <field name="grandfather_name_en" />
                                <field name="grandfather_name_np" />
                            </group>
                            <group>
                                <field name="date_of_birth" options="{'corresponding_field': 'date_of_birth_np'}" />
                                <field name="gender" />
                                <field name="religion" />
                                <field name="mother_tongue" />
                                <field name="country" />
                                <field name="nationality" />
                            </group>
                        </group>
                        <group string="Identification Details">
                            <group string="Citizenship Details">
                                <field name="citizenship_number" />
                                <field name="citizenship_issue_date" options="{'corresponding_field': 'citizenship_issue_date_np'}" />
                                <field name="citizenship_issue_district" />
                            </group>
                            <group string="Passport Details">
                                <field name="passport_number" />
                                <field name="passport_issue_date" options="{'corresponding_field': 'passport_issue_date_np'}" />
                                <field name="passport_issue_district" />
                            </group>
                            <group string="Voter Details">
                                <field name="identity_card_number" />
                                <field name="identity_issue_date" options="{'corresponding_field': 'identity_issue_date_np'}" />
                                <field name="identity_issue_district" />
                            </group>
                            <group string="Other Details">
                                <field name="pan_number" />
                                <field name="other_description" />
                            </group>
                        </group>
                        <group string="Address Details">
                            <group string="Permanent">
                                <field name="permanent_address" />
                                <field name="permanent_house_number" />
                                <field name="permanent_tole_name" />
                                <field name="permanent_street_name" />
                            </group>
                            <group string="Temporary">
                                <field name="temporary_address" />
                                <field name="temporary_house_number" />
                                <field name="temporary_tole_name" />
                                <field name="temporary_street_name" />
                            </group>
                            <group string="Contact Details">
                                <field name="phone_number" />
                                <field name="mobile_number" />
                                <field name="email_address" />
                                <field name="mailing_address" />
                            </group>
                        </group>
                        <group string="Employment Details">
                            <group>
                                <field name="current_position_start_date" options="{'corresponding_field': 'current_position_start_date_np'}" />
                                <field name="current_position_end_date" options="{'corresponding_field': 'current_position_end_date_np'}" />
                                <field name="sequentially" />
                            </group>
                        </group>
                        <group string="Payment Information">
                            <group>
                                <field name="payment_medium" />
                                <field name="bank_name" />
                                <field name="bank_slip_number" />
                                <field name="account_number" />
                            </group>
                        </group>
                        <group string="Others">
                            <field name="remarks" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

