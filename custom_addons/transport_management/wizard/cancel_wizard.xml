<odoo>
    <record id="view_cancel_wizard_form" model="ir.ui.view">
        <field name="name">cancel.wizard.form</field>
        <field name="model">cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Order">
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="confirm_cancel" string="Confirm Cancel" type="object" class="btn-primary"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
