        <section class="service">
            <div class="container-fluid">
                <div class="wrapper">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                            <div class="service_wrapper">
                                <div class="s_icon_wrapper">
                                    <img src="/theme_eco_food/static/src/images/service-icon/delivery-truck.png" alt=""/>
                                </div>
                                <div class="service_detials">
                                    <h6>
                                        Free shipping
                                    </h6>
                                    <p>
                                        On all orders over $75.00
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                            <div class="service_wrapper">
                                <div class="s_icon_wrapper">
                                    <img src="/theme_eco_food/static/src/images/service-icon/earth (1).png" alt=""/>
                                </div>
                                <div class="service_detials">
                                    <h6>
                                        Free Returns
                                    </h6>
                                    <p>
                                        Returns are free within 9 days
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                            <div class="service_wrapper">
                                <div class="s_icon_wrapper">
                                    <img src="/theme_eco_food/static/src/images/service-icon/credit-card.png" alt=""/>
                                </div>
                                <div class="service_detials">
                                    <h6>
                                        100% Payment Secure
                                    </h6>
                                    <p>
                                        Your payment are safe with us.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                            <div class="service_wrapper">
                                <div class="s_icon_wrapper">
                                    <img src="/theme_eco_food/static/src/images/service-icon/call-center.png" alt=""/>
                                </div>
                                <div class="service_detials">
                                    <h6>
                                        Support 24/7
                                    </h6>
                                    <p>
                                        Contact us 24 hours a day
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>
