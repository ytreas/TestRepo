<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="theme_og_store.best_seller_data">
        <section class="best_seller">
            <div class="col-lg-12">
                <div class="owl-carousel owl-theme" id="carousel-1">
                    <t t-foreach="result.products" t-as="product" t-key="product.id">
                        <div class="item">
                            <a t-att-href="product.url">
                                <div class="img-product">
                                    <t t-if="product.image_url">
                                        <img t-att-src="product.image_url" alt=""/>
                                    </t>
                                </div>
                                <div class="p-3 product-content">
                                    <h6 class="text-dark mt-2">
                                        <t t-esc="product.name"/>
                                    </h6>
                                    <h3 class="price-product">
                                        <b>$
                                            <t t-esc="product.price"/>
                                        </b>
                                    </h3>
                                    <div class="ratingandcart">
                                        <div class="container-rating">
                                            <a t-att-href="product.url" class="cart-btn">
                                                <img class="w-50" src="theme_og_store/static/src/img/products/cart-icon.svg"/>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </t>
                </div>
            </div>
        </section>
    </t>
</templates>
