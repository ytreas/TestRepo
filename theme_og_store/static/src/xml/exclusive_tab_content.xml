<?xml version="1.0" encoding="UTF-8" ?>
<!--product tab content template-->
<templates xml:space="preserve">
    <t t-name="theme_og_store.exclusive_category_data">
        <section class="exclusive">
            <div class="wrapper">
                <div class="container">
                    <div id="exclusive">
                        <h3 class="section_heading">Our Exclusive Categories
                        </h3>
                        <div class="owl-carousel" id="slider">
                            <t t-foreach="result.categories" t-as="product" t-key="product.id">
                                <div class="item">
                                    <a t-att-href="product.url"
                                       class="exclusie_card">
                                        <div class="img_wrapper">
                                            <img t-att-src="product.image_url"
                                                 alt=""/>
                                        </div>
                                        <div class="card_bottom">
                                            <div class="top">
                                                <div class="left">
                                                    <h6>
                                                        <t t-esc="product.name"/>
                                                    </h6>
                                                    <p>Discover our exclusive
                                                        product!
                                                    </p>
                                                </div>
                                                <div class="right">
                                                    <div class="price">$<t t-esc="product.price"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <a t-att-href="product.url"
                                               class="btn btn-secondary">Order
                                                Now
                                            </a>
                                        </div>
                                    </a>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </t>
</templates>