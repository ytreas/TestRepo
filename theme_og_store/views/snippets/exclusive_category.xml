<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    Templates for the exclusive categories.-->
    <template id="exclusive_category_highlight"
              name="Exclusive Category Highlight">
        <section class="exclusive_categories_section">
            <div class="container">
                <div class="alert alert-info">
                    <h4>Your Exclusive Category Tab snippet will be displayed here...
                        Please save to view the snippet
                    </h4>
                </div>
            </div>
        </section>
    </template>

    <template id="exclusive_category_highlight_snippet"
              inherit_id="website.snippets"
              name="Exclusive Category Highlight Snippet">
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="theme_og_store.exclusive_category_highlight"
               t-thumbnail="/theme_og_store/static/src/images/snippets/banner.jpg"/>
        </xpath>
    </template>
</odoo>
