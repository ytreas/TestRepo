<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    Templates for the shop highlight templates.-->
    <template id="shop_highlight" name="Shop Highlight">
        <section class="shop_highlight">
            <div class="container">
                <div class="alert alert-info">
                    <h4>Your Shop Highlight Tab snippet will be displayed here...
                        Please save to view the snippet
                    </h4>
                </div>
            </div>

        </section>
    </template>

    <template id="shop_highlight_snippet" inherit_id="website.snippets"
              name="Shop Highlight Snippet">
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="theme_og_store.shop_highlight"
               t-thumbnail="/theme_og_store/static/src/images/snippets/banner.jpg"/>
        </xpath>
    </template>
</odoo>
