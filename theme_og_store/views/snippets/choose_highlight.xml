<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    Templates for the "Why chooses us" snippet-->
    <template id="choose_highlight" name="Choose Highlight">
        <section class="choose">
            <h3 class="section_heading">
                Why Choose Us
            </h3>
            <div class="container">
                <div class=" choose_wrapper">
                    <div class="choose_content">
                        <div class="img_wrapper">
                            <img src="theme_og_store/static/src/img/choose/Frame 1465.png"
                                 alt=""/>
                        </div>
                        <div class="content">
                            <p>
                                Fresh organic <span>Banana Lemon</span> Combo
                            </p>
                            <a href="#" class="btn btn-secondary">Order Now</a>
                        </div>

                    </div>
                    <div class="choose_content">
                        <div class="img_wrapper">
                            <img src="theme_og_store/static/src/img/choose/Frame 1467.png"
                                 alt=""/>
                        </div>
                        <div class="content">
                            <p>
                                Fresh
                                <span>Kiwi</span>
                                Everyday
                            </p>
                            <a href="#" class="btn btn-secondary">Order Now</a>
                        </div>
                    </div>
                    <div class="choose_content">
                        <div class="img_wrapper">
                            <img src="theme_og_store/static/src/img/choose/Frame 1468.png"
                                 alt=""/>
                        </div>
                        <div class="content">
                            <p>
                                Best
                                <span>Dragon Fruit</span>
                                From farm
                            </p>
                            <a href="#" class="btn btn-secondary">Order Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="choose_highlight_snippet" inherit_id="website.snippets"
              name="Choose Highlight Snippet">
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="theme_og_store.choose_highlight"
               t-thumbnail="/theme_og_store/static/src/images/snippets/banner.jpg"/>
        </xpath>
    </template>
</odoo>
