<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    Templates for the products highlight snippet.-->
    <template id="product_highlight" name="Product Highlight">
        <section class="add_section">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-6 col-md-12">
                        <div class="add_img">
                            <img src="theme_og_store/static/src/img/add/add.png"
                                 alt=""/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 col-md-12">
                        <div class="add_info_wrapper">

                            <div class="add_info">
                                <h2>
                                    Product Name
                                </h2>
                                <p>
                                    Welcome to Tasty Daily Farm, where we craft
                                    the finest jams, jellies, and drinks with
                                    a commitment
                                    to quality and a passion for nature’s
                                    bounty. Nestled in the heart of California,
                                    our farm is a haven
                                    for organic cultivation and sustainable
                                    practices. From handpicked fruits
                                    to artisanal craftsmanship,
                                    each jar and bottle is a celebration
                                    of flavor and a testament to our dedication
                                    to preserving the
                                    goodness of nature.
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="product_highlight_snippet" inherit_id="website.snippets"
              name="Product Highlight Snippet">
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="theme_og_store.product_highlight"
               t-thumbnail="/theme_og_store/static/src/images/snippets/banner.jpg"/>
        </xpath>
    </template>

</odoo>
