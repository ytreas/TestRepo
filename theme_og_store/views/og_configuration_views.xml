<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--        Og store configuration action-->
        <record id="og_configuration_action" model="ir.actions.act_window">
            <field name="name">OG Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">og.configuration</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Configuration
                </p>
            </field>
        </record>
<!--        Og store configuration tree view-->
        <record id="og_configuration_view_tree" model="ir.ui.view">
            <field name="name">og.configuration.view.tree</field>
            <field name="model">og.configuration</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="best_products_ids"
                                       widget="many2many_tags"/>
                </list>
            </field>
        </record>
<!--        Og store configuration form view-->
        <record id="og_configuration_view_form" model="ir.ui.view">
            <field name="name">og.configuration.view.form</field>
            <field name="model">og.configuration</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1 class="oe_title">
                            <field name="name" placeholder="e.g. OG Store Configuration"/>
                        </h1>
                        <group>
                            <group string="Exclusive Category Snippet">
                                <field name="category_id"/>
                            </group>
                        </group>
                        <group>
                            <group string="Best Products Snippet">
                                <field name="best_products_ids"
                                       widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <menuitem id="og_configuration_menu_action"
                  name="OG Configuration"
                  parent="website.menu_website_global_configuration"
                  sequence="25"
                  action="og_configuration_action"/>
</odoo>
