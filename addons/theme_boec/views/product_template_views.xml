<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--    Inherited the product template for adding fields-->
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.theme.boec</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="website_sequence" position="after">
                <field name="brand_id"/>
            </field>
            <field name="website_ribbon_id" position="after">
                <field name="hot_deals" string="Hot Sale"/>
            </field>
        </field>
    </record>
</odoo>
